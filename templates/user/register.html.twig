{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section class="min-h-screen flex items-center justify-center bg-gray-50 dark:bg-gray-900">
        <div class="max-w-md w-full bg-white rounded-lg shadow dark:border dark:border-gray-700">
            <div class="p-6 space-y-6">
                <h1 class="text-2xl font-bold text-gray-900 dark:text-white text-center">Create an account</h1>
                {{ form_start(userForm, {'attr': {'class': 'space-y-4'}}) }}

                {{ form_row(userForm.firstName) }}
                {{ form_row(userForm.lastName) }}
                {{ form_row(userForm.email) }}
                {{ form_row(userForm.plainPassword.first) }}
                {{ form_row(userForm.plainPassword.second) }}

                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2.5 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-300">
                    Create an account
                </button>

                {{ form_end(userForm) }}

                <p class="text-sm text-center text-gray-500 dark:text-gray-400">
                    Already have an account? <a href="{{ path('app_login') }}" class="text-primary-600 hover:underline">Log in here</a>
                </p>
            </div>
        </div>
    </section>
{% endblock %}
