{% extends 'base.html.twig' %}

{% block body %}
    <section class="min-h-screen flex items-center justify-center">
        <div class="max-w-md w-full bg-white rounded-lg" style="width: 400px; margin: auto; margin-top: 50px; margin-bottom: 50px;">
            <div class="p-6 space-y-6">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }} <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-title">
                            <h2>SIGN IN</h2>
                        </div>
                    </div>
                </div>
                <form method="post">
                    <div class="form-group text-center" style="font-weight: bold">
                        <label for="inputEmail">EMAIL</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control text-center" autocomplete="email" required autofocus>
                    </div>
                    <div class="form-group text-center" style="font-weight: bold">
                        <label for="inputPassword">PASSWORD</label>
                        <input type="password" name="password" id="inputPassword" class="form-control text-center" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="text-center">
                        <button class="primary-btn w-full py-2.5" type="submit" style="border: none;">
                            SIGN IN
                        </button>
                    </div>
                </form>
                <p class="text-center mt-4">
                    Don't have an account? <a href="{{ path('app_register') }}" class="register-link">Register here</a>
                </p>
            </div>
        </div>
    </section>

    <style>
        .register-link {
            color: #007bff; /* Change this to the desired link color */
        }

        .register-link:hover {
            color: #ff1e00; /* Change this to the desired hover color */
        }
    </style>
{% endblock %}
