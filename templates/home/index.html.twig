{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        table { width: 100%; border-collapse: collapse; margin-top: 20px; }
        table, th, td { border: 1px solid black; }
        th, td { padding: 8px; text-align: left; }
    </style>

    <div class="example-wrapper">
        <h1>Hello {{ controller_name }}! ✅</h1>

        <p>This friendly message is coming from:</p>
        <ul>
            <li>Your controller at <code>{{ 'D:/COURS/S6/PHP symfony/final project/event_manager/src/Controller/HomeController.php' }}</code></li>
            <li>Your template at <code>{{ 'D:/COURS/S6/PHP symfony/final project/event_manager/templates/home/index.html.twig' }}</code></li>
        </ul>

        <h2>Mes Événements</h2>
        {% if registrations is empty %}
            <p>Vous n'êtes inscrit à aucun événement.</p>
        {% else %}
            <table>
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Date</th>
                </tr>
                </thead>
                <tbody>
                {% for registration in registrations %}
                    <tr>
                        <td>{{ registration.event.id }}</td>
                        <td>{{ registration.event.title }}</td>
                        <td>{{ registration.event.description }}</td>
                        <td>{{ registration.event.date|date('Y-m-d H:i') }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}
