{# templates/event/edit.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Edit Event{% endblock %}

{% block body %}
    <h1>Edit Event</h1>

    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.description) }}
    {{ form_row(form.date) }}
    {{ form_row(form.maxUser) }}
    {{ form_row(form.public) }}
    {# You can add more fields as per your Event entity definition #}

    <button type="submit" class="btn btn-primary">Save Changes</button>
    {{ form_end(form) }}
{% endblock %}
